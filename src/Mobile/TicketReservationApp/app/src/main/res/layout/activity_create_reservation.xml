<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateReservationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateReservationActivity"
        tools:layout_editor_absoluteX="-110dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/trainDetailsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="16dp"
            android:text="@string/train_details_txt"
            android:textColor="@color/light_purple"
            app:layout_constraintBottom_toTopOf="@+id/platformNoField"
            app:layout_constraintEnd_toStartOf="@+id/view12" />

        <View
            android:id="@+id/view11"
            android:layout_width="110dp"
            android:layout_height="1dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="26dp"
            android:background="@color/light_purple"
            app:layout_constraintBottom_toTopOf="@+id/trainNoField"
            app:layout_constraintEnd_toStartOf="@+id/trainDetailsTxt"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view12"
            android:layout_width="110dp"
            android:layout_height="1dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="27dp"
            android:background="@color/light_purple"
            app:layout_constraintBottom_toTopOf="@+id/platformNoField"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/viewSummaryBtn"
            android:layout_width="208dp"
            android:layout_height="48dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="52dp"
            android:backgroundTint="@color/light_purple"
            android:text="@string/view_summary_btn"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/stationNameField"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_edittext_with_border"
            android:ems="10"
            android:foregroundTint="#0330065F"
            android:hint="@string/station_name_hint"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/viewSummaryBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/platformNoField"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext_with_border"
            android:ems="10"
            android:foregroundTint="#0330065F"
            android:hint="@string/platform_no_hint"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/stationNameField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/trainNoField" />

        <EditText
            android:id="@+id/trainNoField"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext_with_border"
            android:ems="10"
            android:foregroundTint="#0330065F"
            android:hint="@string/train_no_hint"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/stationNameField"
            app:layout_constraintEnd_toStartOf="@+id/platformNoField"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/generalDetailsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:text="@string/general_details_txt"
            android:textColor="@color/light_purple"
            app:layout_constraintBottom_toTopOf="@+id/nameField"
            app:layout_constraintEnd_toStartOf="@+id/view8" />

        <View
            android:id="@+id/view5"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="26dp"
            android:background="@color/light_purple"
            app:layout_constraintBottom_toTopOf="@+id/nameField"
            app:layout_constraintEnd_toStartOf="@+id/generalDetailsTxt"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view8"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="26dp"
            android:background="@color/light_purple"
            app:layout_constraintBottom_toTopOf="@+id/nameField"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/orTxt4"
            android:layout_width="106dp"
            android:layout_height="20dp"
            android:layout_marginStart="62dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="24dp"
            android:text="@string/passengers_txt"
            android:textColor="@color/light_purple"
            app:layout_constraintBottom_toTopOf="@+id/reservedTimeField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/passengersField" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            style="@style/BottomNavigationViewStyle"
            android:layout_width="412dp"
            android:layout_height="70dp"
            app:itemBackground="@color/light_purple"
            app:itemTextColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_navigation" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="216dp"
            android:layout_height="27dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="32dp"
            android:text="@string/create_reservation_title"
            android:textColor="@color/dark_purple"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/generalDetailsTxt"
            app:layout_constraintEnd_toStartOf="@+id/resID"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/resID"
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="44dp"
            android:text="@string/res_id"
            android:textColor="@color/dark_purple"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/view8"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/nameField"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext_with_border"
            android:ems="10"
            android:foregroundTint="#0330065F"
            android:hint="@string/name_hint"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/destinationField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/passengersField"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext_with_border"
            android:ems="10"
            android:foregroundTint="#0330065F"
            android:hint="@string/no_of_passengers_hint"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/reservedTimeField"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/destinationField"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext_with_border"
            android:ems="10"
            android:foregroundTint="#0330065F"
            android:hint="@string/destination_hint"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/passengersField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/reservedTimeField"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/rounded_edittext_with_border"
            android:ems="10"
            android:foregroundTint="#0330065F"
            android:hint="@string/reserved_time_hint"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/trainDetailsTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="413dp"
        android:layout_height="41dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>