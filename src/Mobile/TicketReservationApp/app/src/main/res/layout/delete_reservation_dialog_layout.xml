<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/deleteConfirmationTitle"
        android:layout_width="251dp"
        android:layout_height="27dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="50dp"
        android:text="Delete Confirmation"
        android:textColor="@color/dark_purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/generalDetailsTxt"
        app:layout_constraintEnd_toStartOf="@+id/resID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dialogContextTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Are you sure that you want to delete this reservation?"
        android:textColor="@color/dark_purple" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="57dp">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/white"
            android:text="CANCEL"
            android:textColor="@color/dark_purple"
            app:strokeColor="@color/dark_purple"
            app:strokeWidth="1dp" />


        <Button
            android:id="@+id/deleteReservationBtn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/light_purple"
            android:text="YES" />

    </LinearLayout>

</LinearLayout>
